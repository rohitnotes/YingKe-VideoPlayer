<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.yingke.widget.pulltorefresh.PullToRefreshRecyclerView
        android:id="@+id/refresh_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@drawable/ptr_list_divider"
        android:layout_marginTop="0dp"
        android:overScrollFooter="@color/trans"
        android:scrollbarStyle="outsideOverlay"
        android:scrollbarThumbVertical="@drawable/ptr_scrollbar_vertical"
        app:ptrListViewExtrasEnabled="false"
        android:layout_marginBottom="0dp"
        />


</RelativeLayout>